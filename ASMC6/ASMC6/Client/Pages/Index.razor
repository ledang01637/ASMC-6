@page "/"
@layout MainLayout
@using ASMC6.Shared
@using ASMC6.Server.Service
@inject HttpClient httpClient
@inject CartService CartService
@inject NavigationManager Navigation




<!--Carosel-->
<div id="carouselExampleDark"
     class="carousel carousel-dark slide"
     data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
            <img src="./public/banner17jpg@2x.png" width="100%" height="720px" />

            <div class="carousel-caption">
                <h1>First slide label</h1>
                <p>Some representative placeholder content for the first slide.</p>
                <button class="btn btn-danger">Đến cửa hàng</button>
            </div>
        </div>

        <div class="carousel-item" data-bs-interval="2000">
            <img src="./public/banner18jpg@2x.png" width="100%" height="720px" />
            <div class="carousel-caption">
                <h1>Second slide label</h1>
                <p>Some representative placeholder content for the second slide.</p>
                <button class="btn btn-danger">Đến cửa hàng</button>
            </div>
        </div>

        <div class="carousel-item">
            <img src="./public/banner19jpg@2x.png" width="100%" height="720px" />
            <div class="carousel-caption">
                <h1>Third slide label</h1>
                <p>Some representative placeholder content for the third slide.</p>
                <button class="btn btn-danger">Đến cửa hàng</button>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleDark"
            data-bs-slide="prev">
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleDark"
            data-bs-slide="next">
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!--Carodel-->

<div class="container mt-3 mb-3 border rounded-start rounded-end bg-danger">
    <div class="col-md-12 row p-2">
        <div class="col-md-10">
            <b class="fs-2">Món ăn nổi bậc</b>
        </div>
        <div class="col-md-2">
            <button class="btn btn-light col-md-12 m-auto">Xem thêm</button>
        </div>
    </div>
</div>

<!---->
<section class="container">
    <div class="col-md-12 row">
        <div class="border border-1 col-md-6 p-3">
            <img src="./image/restaurant/bun-1.jpeg" width="100%" height="270vh" alt="Alternate Text" />
            <div class="diventry-inner10"></div>
        </div>
        <div class="border border-1 col-md-6 p-3">
            <img src="./image/restaurant/rest1.jpg" width="100%" height="270vh" alt="Alternate Text" />
            <div class="diventry-inner10"></div>
        </div>
    </div>
    <div class="col-md-12 row">
        <!--SP1-->
        @{
            if (restaurant != null)
            {
                @foreach (var prod in listProd)
                {
                    if (!prod.IsDelete)
                    {
                        <div class="border border-1 col-md-3 mt-3">
                            <div class="col-md-12">
                                <h1>@prod.ProductId</h1>
                                <div class="d-flex flex-row align-items-start justify-content-start spanbadge46 bg-gradient mt-3">
                                    <img class="svg-icon8"
                                         alt=""
                                         src="./image/product/@prod.Image"
                                         width="100%" height="300px" />
                                </div>
                                <div class="add-button-three position-relative mt-1">
                                    <div class="link-great-value-rising-crus-parent d-flex flex-column align-items-start justify-content-start">
                                        <div class="link-great-container18">
                                            <a class="great-value-rising9 fs-5">@prod.Name</a>
                                        </div>
                                    </div>
                                    <b class="ins-wrapper fs-5 mt-3">@prod.Price.ToString("#,##0") VND</b>
                                    <a class="position-absolute top-0 end-0 mt-3" style="cursor: pointer" @onclick="() => AddToCart(prod)">
                                        <i class="fa-solid fa-cart-plus text-danger fs-4"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                foreach (var rest in listRest)
                {
                    var menuForRest = listMenu.FirstOrDefault(menu => menu.RestaurantId == rest.RestaurantId);
                    var prods = listProd.Where(prod => prod.MenuId == menuForRest.MenuId).ToList();

                    if (prods != null)
                    {
                        @foreach (var prod in prods)
                        {
                            if (!prod.IsDelete)
                            {
                                <div class="border border-1 col-md-3 mt-3">
                                    <div class="col-md-12">
                                        <h1>@prod.ProductId</h1>
                                        <div class="d-flex flex-row align-items-start justify-content-start spanbadge46 bg-gradient mt-3">
                                            <img class="svg-icon8"
                                                 alt=""
                                                 src="./image/product/@prod.Image"
                                                 width="100%" height="300px" />
                                        </div>
                                        <div class="add-button-three position-relative mt-1">
                                            <div class="link-great-value-rising-crus-parent d-flex flex-column align-items-start justify-content-start">
                                                <div class="link-great-container18">
                                                    <a class="great-value-rising9 fs-5">@prod.Name</a>
                                                </div>
                                            </div>
                                            <b class="ins-wrapper fs-5 mt-3">@prod.Price.ToString("#,##0") VND</b>
                                            <a class="position-absolute top-0 end-0 mt-3" style="cursor: pointer" @onclick="() => AddToCart(prod)">
                                                <i class="fa-solid fa-cart-plus text-danger fs-4"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                    }
                }
            }

        }

    </div>
</section>

<div class="container mt-3 mb-3 border rounded-start rounded-end bg-danger">
    <div class="col-md-12 row p-2">
        <div class="col-md-10">
            <b class="fs-2">Danh mục cửa hàng</b>
        </div>
    </div>
</div>

<section class="container">
    <div class="col-md-12 row">
        @if (listRest == null)
        {
            <div id="loading">
                <div class="item1"></div>
                <div class="item2"></div>
                <div class="item3"></div>
            </div>
        }
        else if (!listRest.Any())
        {
            <p>Your cart is empty.</p>
        }
        else
        {
            @foreach (var rest in listRest)
            {
                <a class="col-md-3 border mt-3 rounded nav-link" href="/product">
                    <div class="image-links col-md-12 row">
                        <div class="product-links col-md-6">
                            <div class="offer-links">
                                <img alt="Img"
                                     class="rounded-circle"
                                     src="./image/restaurant/@rest.Image"
                                     width="100%" />
                            </div>
                        </div>
                        <div class="rating-content-parent col-md-6">
                            <div class="rating-content">
                                <b class="great-value-rising11">@rest.Name</b>
                                <div class="rating-image">
                                    <img class="img-rated-400-out-of-513"
                                         loading="lazy"
                                         alt=""
                                         src="./public/img--rated-400-out-of-51.svg" />
                                    <span class="empty2">3</span>
                                </div>
                            </div>
                            <div class="col-md-12 mt-3">
                                <span>@rest.OpeningHours.TimeOfDay</span>
                            </div>
                        </div>
                    </div>
                </a>
            }
        }

    </div>
    <!---->
    <div class="container rounded-start rounded-end">
        <div class="col-md-12 row p-2">
            <div class="col-md-10"></div>
        </div>
    </div>
</section>