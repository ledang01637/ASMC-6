@page "/"
@layout MainLayout
@using ASMC6.Shared
@using ASMC6.Server.Service
@inject HttpClient httpClient
@inject CartService CartService
@inject NavigationManager Navigation




<!--Carosel-->
<div id="carouselExampleDark"
     class="carousel carousel-dark slide"
     data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
            <img src="./image/bg2.jpg" width="100%" height="500px" />
            <div class="carousel-caption">
                <button class="btn btn-danger">Đến cửa hàng</button>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleDark"
            data-bs-slide="prev">
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleDark"
            data-bs-slide="next">
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!---->
<section class="container mt-2">
    <div class="col-md-12 row">
        <div class="border border-1 col-md-6 p-3">
            <img src="./image/restaurant/bun-1.jpeg" width="100%" height="270vh" alt="Alternate Text" />
            <div class="diventry-inner10"></div>
        </div>
        <div class="border border-1 col-md-6 p-3">
            <img src="./image/restaurant/rest1.jpg" width="100%" height="270vh" alt="Alternate Text" />
            <div class="diventry-inner10"></div>
        </div>
    </div>
    <!--Carodel-->

    <div class="container mt-3 mb-3 border rounded-start rounded-end bg-danger">
        <div class="col-md-12 row p-2">
            <div class="col-md-10">
                <b class="fs-2">Món ăn nổi bậc</b>
            </div>
        </div>
    </div>
    <div id="carouselexamplecaptions" class="carousel col-md-12 row">
        <div class="carousel-inner">
            @if (restaurant != null)
            {
                @for (var i = 0; i < Math.Ceiling(listProd.Count / 12.0); i++)
                {
                    var currentGroup = listProd.Skip(i * 12).Take(12).ToList();
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row">
                            @foreach (var product in currentGroup)
                            {
                                var menuForProd = listMenu.FirstOrDefault(menu => menu.MenuId == product.MenuId);
                                @if (menuForProd != null)
                                {
                                    var rest = listRest.FirstOrDefault(res => res.RestaurantId == menuForProd.RestaurantId);
                                    @if (!product.IsDelete)
                                    {
                                        <a class="col-md-3 text-decoration-none mt-3">
                                            <div class="card position-relative">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <a class="col-md-12" href="./restaurantProd/@rest.RestaurantId">
                                                            <img src="./image/product/@product.Image"
                                                                 class="img-fluid"
                                                                 alt="Product Image" width="100%" style="height: 15rem;" />
                                                        </a>
                                                        <b>@product.Name</b>
                                                        <div class="col-md-12">
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <div>
                                                                    <img src="./public/img--rated-433-out-of-5.svg"
                                                                         class="img-fluid"
                                                                         alt="Rating" />
                                                                    <span class="empty-rating">3</span>
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <b class="text-danger ins">@product.Price.ToString("#,##0") VND</b>
                                                            </div>
                                                        </div>
                                                        <a class="nav-link" style="cursor: pointer" @onclick="() => AddToCart(product)">
                                                            <i class="fa-solid fa-cart-plus text-danger fs-4 position-absolute bottom-0 end-0 me-3 mb-3"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    }
                                }
                                
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                foreach (var rest in listRest)
                {
                    var menuForRest = listMenu.FirstOrDefault(menu => menu.RestaurantId == rest.RestaurantId);
                    var prods = listProd.Where(prod => prod.MenuId == menuForRest.MenuId).ToList();

                    if (prods != null)
                    {
                        @foreach (var item in prods.Select((p, index) => new { p, index }).GroupBy(x => x.index / 12.0))
                        {
                            <div class="carousel-item @(item.First().index == 0 ? "active" : "")">
                                <div class="col-md-12 row">
                                    @foreach (var product in item.Select(x => x.p))
                                    {
                                        if (!product.IsDelete)
                                        {
                                            <a class="col-md-3 text-decoration-none mt-3">
                                                <div class="card position-relative">
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <a class="col-md-12" href="./restaurantProd/@menuForRest.RestaurantId">
                                                                <img src="./image/product/@product.Image"
                                                                     class="img-fluid"
                                                                     alt="Product Image" width="100%" style="height: 15rem;" />
                                                            </a>
                                                            <b>@product.Name</b>
                                                            <div class="col-md-12">
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <div>
                                                                        <img src="./public/img--rated-433-out-of-5.svg"
                                                                             class="img-fluid"
                                                                             alt="Rating" />
                                                                        <span class="empty-rating">3</span>
                                                                    </div>
                                                                </div>
                                                                <div>
                                                                    <b class="text-danger ins">@product.Price.ToString("#,##0") VND</b>
                                                                </div>
                                                            </div>
                                                            <a class="nav-link" style="cursor: pointer" @onclick="() => AddToCart(product)">
                                                                <i class="fa-solid fa-cart-plus text-danger fs-4 position-absolute bottom-0 end-0 me-3 mb-3"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                }
            }
        </div>

        <div class="carousel col-md-12 mt-3">
            <div class="m-auto text-center">
                @for (var i = 0; i < Math.Ceiling((restaurant != null ? listProd.Count : listProd.Count) / 12.0); i++)
                {
                    <button type="button"
                            data-bs-target="#carouselexamplecaptions"
                            data-bs-slide-to="@i"
                            class="@(i == 0 ? "" : "") ms-1 btn"
                            aria-current="@(i == 0 ? "true" : "false")"
                            aria-label="slide @(i + 1)">
                        @(@i + 1)
                    </button>
                }
            </div>
        </div>
    </div>
</section>

<div class="container mt-3 mb-3 border rounded-start rounded-end bg-danger">
    <div class="col-md-12 row p-2">
        <div class="col-md-10">
            <b class="fs-2">Danh mục cửa hàng</b>
        </div>
    </div>
</div>

<section class="container">
    <div id="caroselRest" class="carousel slide">
        <div class="carousel-inner">
            @if (listRest == null)
            {
                <p>Loading...</p>
            }
            else if (!listRest.Any())
            {
                <p>Your rest is empty.</p>
            }
            else
            {
                @for (var i = 0; i < Math.Ceiling(listRest.Count / 8.0); i++)
                {
                    var currentGroup = listRest.Skip(i * 8).Take(8).ToList();
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row">
                            @foreach (var rest in currentGroup)
                            {
                                @if (!rest.IsDelete)
                                {
                                    <a class="col-md-3 border mt-3 rounded nav-link" href="./restaurantProd/@rest.RestaurantId">
                                        <div class="image-links col-md-12 row">
                                            <div class="product-links col-md-6">
                                                <div class="offer-links">
                                                    <img alt="Img"
                                                         class="rounded-circle"
                                                         src="./image/restaurant/@rest.Image"
                                                         width="120px" height="120px" />
                                                </div>
                                            </div>
                                            <div class="rating-content-parent col-md-6">
                                                <div class="rating-content">
                                                    <b class="great-value-rising11">@rest.Name</b>
                                                    <div class="rating-image">
                                                        <img class="img-rated-400-out-of-513"
                                                             loading="lazy"
                                                             alt=""
                                                             src="./public/img--rated-400-out-of-51.svg" />
                                                        <span class="empty2">3</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 mt-3">
                                                    <span>Mở cửa lúc: @rest.OpeningHours.TimeOfDay</span>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                }
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Carousel Indicators -->
        <div class="carousel col-md-12 mt-3">
            <div class="m-auto text-center">
                @for (var i = 0; i < Math.Ceiling((listRest != null ? listRest.Count : listRest.Count) / 8.0); i++)
                {
                    <button type="button"
                            data-bs-target="#caroselRest"
                            data-bs-slide-to="@i"
                            class="@(i == 0 ? "" : "") ms-1 btn"
                            aria-current="@(i == 0 ? "true" : "false")"
                            aria-label="slide @(i + 1)">
                        @(@i + 1)
                    </button>
                }
            </div>
        </div>
    </div>
</section>
