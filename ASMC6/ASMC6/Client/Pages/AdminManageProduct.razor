@page "/adminproductmanage"
@layout AdminMainLayout
@using ASMC6.Shared
@using ASMC6.Server.Service
@inject HttpClient httpClient
@inject NavigationManager Navigation
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@* @attribute [Authorize(Roles = "1")] *@


<style>
    .product-table-container {
        max-height: 600px;
        overflow-y: auto;
    }

        .product-table-container table {
            width: 100%;
        }

    .search-bar, .filter-bar {
        margin-bottom: 20px;
    }
</style>

<AuthorizeView Roles="1">
    <Authorized>
        @if (isLoaded)
        {
            <hr />

            <h4>Quản lý sản phẩm</h4>
            <div class="search-bar">
                <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm..." @oninput="FilterProducts" />
            </div>
            <div class="search-bar">
                <input type="number" class="form-control" placeholder="Tìm kiếm giá..." @oninput="FilterByPrice" />
            </div>

            <div class="product-table-container">
                <table class="table table-striped cardz">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>MenuID</th>
                            <th>CategoryID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>IsDelete</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prod in filteredProd)
                        {
                            <tr>
                                <td><img src="./image/product/@prod.Image" alt="Product Image" width="100px" height="100px" /></td>
                                <td>@prod.MenuId</td>
                                <td>@prod.CategoryId</td>
                                <td>@prod.Name</td>
                                <td>@prod.Description</td>
                                <td>@prod.Price</td>
                                <td>@(prod.IsDelete)</td>
                                <td>
                                    @if (!prod.IsDelete)
                                    {
                                        <button class="btn btn-danger" @onclick="() => HideProd(prod.ProductId)">Ẩn</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-warning" @onclick="() => RestoreProd(prod.ProductId)">Khôi phục</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>Loading...</p>
        }

    </Authorized>
    <NotAuthorized>
        <h3>Không có quyền truy cập</h3>
    </NotAuthorized>
</AuthorizeView>