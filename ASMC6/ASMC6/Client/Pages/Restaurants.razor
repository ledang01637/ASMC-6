@page "/registRestaurant"
@using ASMC6.Client.Session
@using ASMC6.Shared
@inject LocalStorageService _localStorageService
@inject NavigationManager Navigation
@inject HttpClient httpClient
<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="text-center mb-0">TRỞ THÀNH NGƯỜI BÁN</h5>
            </div>
            <div class="card-body">
                <EditForm method="post" Model="@rest" OnValidSubmit="AddProd">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"><strong>Tên Cửa Hàng</strong></label>
                        <input @bind="rest.Name" class="form-control" placeholder="Nhập Tên" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label"><strong>Ảnh Cửa Hàng</strong></label>
                        <input type="file" @bind="rest.Image" class="form-control-file" />
                        <small class="form-text text-muted">Chọn một tệp hình ảnh để tải lên.</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address" class="control-label"><strong>Địa Chỉ</strong></label>
                        <input @bind="rest.Address" class="form-control" placeholder="Nhập Địa Chỉ" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OpeningHours" class="control-label"><strong>Giờ Mở Cửa</strong></label>
                        <input @bind="rest.OpeningHours" class="form-control" placeholder="Nhập Giờ Mở Cửa" />
                        <span asp-validation-for="OpeningHours" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-danger mx-2">Đăng ký</button>
                            <a asp-controller="Home" aria-current="page" href="/" class="btn btn-secondary mx-2">Quay Về</a>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>



@code {
    private List<Restaurant> listProd = new List<Restaurant>();
    private ASMC6.Shared.Restaurant rest = new ASMC6.Shared.Restaurant();

    protected override async Task OnInitializedAsync()
    {
        var email = await _localStorageService.GetItemAsync("userName");

        if (email is null)
        {
            Navigation.NavigateTo("/login");
        }
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            listProd = await httpClient.GetFromJsonAsync<List<Restaurant>>("api/Restaurant/GetRestaurants");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private async Task AddProd()
    {
        rest.UserId = SUser.User.UserId;
        await httpClient.PostAsJsonAsync("api/Restaurant/AddRestaurant", rest);
        await LoadProducts();
        rest = new ASMC6.Shared.Restaurant();
        StateHasChanged();
    }
}
