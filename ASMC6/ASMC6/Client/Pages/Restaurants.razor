@page "/restaurant"
@using ASMC6.Shared
@inject HttpClient httpClient
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="text-center mb-0">TRỞ THÀNH NGƯỜI BÁN</h5>
            </div>
            <div class="card-body">


                <EditForm method="post" Model="@prod" OnValidSubmit="AddProd">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"><strong>Tên Cửa Hàng</strong></label>
                        <input @bind="prod.Name" class="form-control" placeholder="Nhập Tên" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label"><strong>Ảnh Cửa Hàng</strong></label>
                        <input type="file" @bind="prod.Image" class="form-control-file" />
                        <small class="form-text text-muted">Chọn một tệp hình ảnh để tải lên.</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address" class="control-label"><strong>Địa Chỉ</strong></label>
                        <input @bind="prod.Address" class="form-control" placeholder="Nhập Địa Chỉ" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OpeningHours" class="control-label"><strong>Giờ Mở Cửa</strong></label>
                        <input @bind="prod.OpeningHours" class="form-control" placeholder="Nhập Giờ Mở Cửa" />
                        <span asp-validation-for="OpeningHours" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-danger mx-2">Đăng ký</button>
                            <a asp-controller="Home" aria-current="page" href="/" class="btn btn-secondary mx-2">Quay Về</a>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
@* <button class="btn btn-danger mx-2" @onclick="AddProd">Đăng ký</button> *@



@code {
    private List<Restaurant> listProd = new List<Restaurant>();
    private Restaurant prod = new Restaurant();

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            listProd = await httpClient.GetFromJsonAsync<List<Restaurant>>("api/Restaurant/GetRestaurants");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private async Task AddProd()
    {
        await httpClient.PostAsJsonAsync("api/Restaurant/AddRestaurant", prod);
        await LoadProducts();
        prod = new Restaurant(); // Reset form
        StateHasChanged();
    }
}
