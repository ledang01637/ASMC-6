@page "/registRestaurant"
@using ASMC6.Client.Session
@using ASMC6.Shared
@inject LocalStorageService _localStorageService
@inject NavigationManager Navigation
@inject HttpClient httpClient

<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="text-center mb-0">TRỞ THÀNH NGƯỜI BÁN</h5>
            </div>
            <div class="card-body">
                <EditForm method="post" Model="@rest" OnValidSubmit="AddProd">
                    <DataAnnotationsValidator />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"><strong>Tên Cửa Hàng</strong></label>
                        <input @bind="rest.Name" class="form-control" placeholder="Nhập Tên" />
                        <ValidationMessage For="@(()=>rest.Name)" />
                    </div>

                    <div class="form-group">
                        <label class="control-label"><strong>Ảnh Cửa Hàng</strong></label>
                        <InputFile type="file" OnChange="HandleFileSelected" class="form-control-file" />
                        <small class="form-text text-muted">Chọn một tệp hình ảnh để tải lên.</small>
                        <ValidationMessage For="@(()=>rest.Image)" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Address" class="control-label"><strong>Địa Chỉ</strong></label>
                        <input @bind="rest.Address" class="form-control" placeholder="Nhập Địa Chỉ" />
                        <ValidationMessage For="@(()=>rest.Address)" />
                    </div>

                    <div class="form-group">
                        <label asp-for="OpeningHours" class="control-label"><strong>Giờ Mở Cửa</strong></label>
                        <input type="datetime" @bind="rest.OpeningHours" class="form-control" />
                        <ValidationMessage For="@(()=>rest.OpeningHours)" />
                    </div>

                    <!-- New Menu Name Input Field -->
                    <div class="form-group">
                        <label class="control-label"><strong>Tên Menu</strong></label>
                        <input @bind="menuName" class="form-control" placeholder="Nhập Tên Menu" />
                        <ValidationMessage For="@(()=>menuName)" />
                    </div>

                    <div class="form-group text-center">
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-danger mx-2">Đăng ký</button>
                            <a asp-controller="Home" aria-current="page" href="/" class="btn btn-secondary mx-2">Quay Về</a>
                        </div>
                    </div>
                </EditForm>
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success mt-3">
                        @successMessage
                    </div>
                }
                @if (!string.IsNullOrEmpty(ero))
                {
                    <div class="alert alert-danger mt-3">
                        @ero
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private string ero;

    private string successMessage;
    private string menuName;
    private List<ASMC6.Shared.Restaurant> listRest = new List<ASMC6.Shared.Restaurant>();
    private ASMC6.Shared.Restaurant rest = new ASMC6.Shared.Restaurant();
    private string imageFileName;
    private IBrowserFile selectedFile;
    private int selectedProductId;

    protected override async Task OnInitializedAsync()
    {
        var email = await _localStorageService.GetItemAsync("userName");

        if (email is null)
        {
            Navigation.NavigateTo("/login");
        }
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            listRest = await httpClient.GetFromJsonAsync<List<ASMC6.Shared.Restaurant>>("api/Restaurant/GetRestaurants");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private async Task AddProd()
    {
        try
        {
            var existingRestaurant = listRest.FirstOrDefault(r => r.UserId == SUser.User.UserId);
            if (existingRestaurant != null)
            {
                ero = "Bạn đã đăng ký một cửa hàng trước đó!";
                successMessage = string.Empty;
                return;
            }
            DateTime localDate = DateTime.Now;
            if (rest.OpeningHours < localDate && (localDate.Year - rest.OpeningHours.Year) > 1)
            {
                ero = "Thời gian phải lớn hơn hiện tại và và thời gian mở là phải bé hơn 1 năm";
                successMessage = string.Empty;
                return;
            }
            rest.UserId = SUser.User.UserId;
            var response = await httpClient.PostAsJsonAsync("api/Restaurant/AddRestaurant", rest);

            if (response.IsSuccessStatusCode)
            {
                var abc = await httpClient.GetFromJsonAsync<List<ASMC6.Shared.Restaurant>>("api/Restaurant/GetRestaurants");
                var cba = abc.LastOrDefault();
                var menu = new Menu
                    {
                        RestaurantId = cba.RestaurantId,
                        Name = menuName,
                        IsDelete = false
                    };
                await httpClient.PostAsJsonAsync("api/Menu/AddMenu", menu);

                var updatedUser = new User()
                    {
                        Name = SUser.User.Name,
                        RoleId = 2,
                        Email = SUser.User.Email,
                        Phone = SUser.User.Phone,
                        Password = SUser.User.Password,
                        Address = SUser.User.Address,
                        IsDelete = SUser.User.IsDelete
                    };
                int id = SUser.User.UserId;
                var userResponse = await httpClient.PutAsJsonAsync($"api/User/{id}", updatedUser);

                if (response.IsSuccessStatusCode && userResponse.IsSuccessStatusCode)
                {
                    await LoadProducts();
                    rest = new ASMC6.Shared.Restaurant();
                    menuName = string.Empty;
                    ero = string.Empty;
                    successMessage = "Đăng ký thành công!";
                    await Task.Delay(1000);
                    Navigation.NavigateTo("/logout", true);
                }
                else
                {
                    ero = "Đăng ký bán hàng thất bại!";
                    successMessage = string.Empty;
                }
            }
            else
            {
                ero = "Đăng ký bán hàng thất bại!";
                successMessage = string.Empty;
            }
        }
        catch (Exception ex)
        {
            ero = $"Đã xảy ra lỗi: {ex.Message}";
            successMessage = string.Empty;
        }

        StateHasChanged();
    }
    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            selectedFile = file;
            imageFileName = file.Name;
            rest.Image = imageFileName;
        }
    }
}
