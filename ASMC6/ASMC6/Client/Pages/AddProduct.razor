@page "/addproduct"
@using ASMC6.Client.Session
@using ASMC6.Shared
@layout MainLayout
@inject HttpClient httpClient
<div class="row justify-content-center mt-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="text-center mb-0">Thêm sản phẩm</h5>
            </div>
            <div class="card-body">
                <EditForm method="post" Model="@prod" OnValidSubmit="AddProd">
                    <DataAnnotationsValidator />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"><strong>MenuId</strong></label>
                        <input @bind="prod.MenuId" class="form-control" placeholder="MenuId" />
                        <ValidationMessage For="@(()=>prod.MenuId)" />
                    </div>


                    <div class="form-group">
                        <label asp-for="Address" class="control-label"><strong>CategoryId</strong></label>
                        <input @bind="prod.CategoryId" class="form-control" placeholder="" />
                        <ValidationMessage For="@(()=>prod.CategoryId)" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Address" class="control-label"><strong>Name</strong></label>
                        <input @bind="prod.Name" class="form-control" placeholder="Nhập Địa Chỉ" />
                        <ValidationMessage For="@(()=>prod.Name)" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Address" class="control-label"><strong>Description</strong></label>
                        <input @bind="prod.Description" class="form-control" placeholder="Nhập Địa Chỉ"/>
                        <ValidationMessage For="@(()=>prod.Description)" />
                    </div>

                    <div class="form-group">
                        <label class="control-label"><strong>Ảnh Cửa Hàng</strong></label>
                        <input type="file" @bind="prod.Image" class="form-control-file" />
                        <small class="form-text text-muted">Chọn một tệp hình ảnh để tải lên.</small>
                        <ValidationMessage For="@(()=>prod.Image)" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Address" class="control-label"><strong>Price</strong></label>
                        <input type="number" @bind="prod.Price" class="form-control" placeholder="Price" />
                        <ValidationMessage For="@(()=>prod.Price)" />
                    </div>

                    <div class="form-group text-center">
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-danger mx-2">Đăng ký</button>
                            <a asp-controller="Home" aria-current="page" href="/restaurant" class="btn btn-secondary mx-2">Quay Về</a>
                        </div>
                    </div>
                </EditForm>
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success mt-3">
                        @successMessage
                    </div>
                }
                @if (!string.IsNullOrEmpty(ero))
                {
                    <div class="alert alert-danger mt-3">
                        @ero
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private string ero;
    private string successMessage;
    private List<ASMC6.Shared.Product> listProd = new List<ASMC6.Shared.Product>();
    private ASMC6.Shared.Product prod = new ASMC6.Shared.Product();

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            listProd = await httpClient.GetFromJsonAsync<List<ASMC6.Shared.Product>>("api/Product/GetProducts");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private async Task AddProd()
    {
        try
        {
            await httpClient.PostAsJsonAsync("api/Product/AddProduct", prod);
            await LoadProducts();
            prod = new ASMC6.Shared.Product(); // Reset form
            ero = string.Empty;
            successMessage = "Thêm thành công!";
        }
        catch (Exception ex)
        {
            ero = $"Đã xảy ra lỗi: {ex.Message}";
            successMessage = string.Empty;
        }

        StateHasChanged();
    }
}