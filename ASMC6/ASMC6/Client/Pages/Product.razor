@page "/product"
@using ASMC6.Shared
@using ASMC6.Server.Service
@inject HttpClient httpClient
@inject CartService CartService
@inject NavigationManager Navigation

@if (listProd != null)
{
    <div class="container-fluid col-md-12 mt-5">
        <div class="col-md-12 row">
            <!--Filter-->
            <div class="col-md-3 p-4 mb-3">
                <h4 class="fw-bold">Lọc sản phẩm</h4>
                <div class="row">
                    <div class="search-bar">
                        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm..." @oninput="FilterProducts" />
                    </div>
                    <div class="col-6">
                        <label for="min-price" class="form-label">Thấp</label>
                        <input type="number"
                               class="form-control"
                               id="min-price"
                               placeholder="0"
                               @bind="minPrice"
                               @bind:event="oninput" />
                    </div>
                    <div class="col-6">
                        <label for="max-price" class="form-label">Cao</label>
                        <input type="number"
                               class="form-control"
                               id="max-price"
                               placeholder="Không giới hạn"
                               @bind="maxPrice"
                               @bind:event="oninput" />
                    </div>
                </div>
                <button class="form-button btn btn-secondary border border-rill mt-3 col-md-12"
                        @onclick="FilterByPrice">
                    Lọc theo giá
                </button>
                <button class="form-button btn btn-secondary border border-rill mt-3 col-md-12"
                        @onclick="ResetPriceFilter">
                    Reset giá
                </button>

            </div>
            <!--Product-->
            <div class="col-md-9">

                <div id="carouselExampleIndicators" class="carousel slide">
                    <div class="col-md-12 m-auto">
                        <div class="carousel-inner">
                            @{
                                int itemsPerPage = 8;
                                int totalItems = pagedProducts.Count();
                                int totalPages = (int)Math.Ceiling((double)totalItems / itemsPerPage);
                                for (int pageIndex = 0; pageIndex < totalPages; pageIndex++)
                                {
                                    var pageProducts = pagedProducts.Skip(pageIndex * itemsPerPage).Take(itemsPerPage);
                                    <div class="carousel-item @(pageIndex == 0 ? "active" : "")">
                                        <div class="container col-md-12 row">
                                            @foreach (var product in pageProducts)
                                            {
                                                <a class="col-md-3 text-decoration-none mt-3">
                                                    <div class="card position-relative">
                                                        <div class="card-body">
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <img src="./image/product/@product.Image"
                                                                         alt="Product Image" width="100%" height="150vh" />
                                                                </div>
                                                                <b>@product.Name</b>
                                                                <div class="col-md-12">
                                                                    <div class="d-flex justify-content-between align-items-center">
                                                                        <div>
                                                                            <img src="./public/img--rated-433-out-of-5.svg"
                                                                                 class="img-fluid"
                                                                                 alt="Rating" />
                                                                            <span class="empty-rating">3</span>
                                                                        </div>
                                                                    </div>
                                                                    <div>
                                                                        <b class="text-danger ins">@product.Price.ToString("#,##0") VND</b>
                                                                    </div>
                                                                </div>
                                                                <a class="nav-link" style="cursor: pointer" @onclick="() => AddToCart(product)">
                                                                    <i class="fa-solid fa-cart-plus text-danger fs-4 position-absolute bottom-0 end-0 me-3 mb-3"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-3 text-start">
                                <button class="btn btn-primary rounded col-md-3 bg" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Lui</span>
                                </button>
                            </div>
                            <div class="col-md-6 text-center">
                                <div class="mt-3 border border-0">
                                    @for (int i = 0; i < totalPages; i++)
                                    {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="btn border border-0 fs-5 m-1 @(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)">
                                            @(i + 1)
                                        </button>
                                    }
                                </div>
                            </div>
                            <div class="col-md-3 text-end">
                                <button class="btn btn-primary rounded col-md-3 bg" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Tới</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Loading...</p>
}
