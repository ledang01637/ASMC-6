@code {
    private List<ASMC6.Shared.Product> listProd;
    private List<ASMC6.Shared.Product> pagedProducts;
    private decimal minPrice;
    private decimal maxPrice = 100000;
    private string searchTerm;
    private int totalProductsFound;
    private List<string> selectedCategories = new List<string>();

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
        ApplyFilter();
    }

    private async Task LoadProducts()
    {
        try
        {
            listProd = await httpClient.GetFromJsonAsync<List<ASMC6.Shared.Product>>("api/Product/GetProducts");
            ApplyFilter();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    //điều kiện lọc
    private void ApplyFilter()
    {
        if (listProd != null)
        {
            pagedProducts = listProd
                .Where(p => p.Price >= minPrice && p.Price <= maxPrice)
                .Where(p => string.IsNullOrWhiteSpace(searchTerm) || p.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                .Where(p => !selectedCategories.Any() || selectedCategories.Contains(p.Description))
                .ToList();
            totalProductsFound = pagedProducts.Count;
        }
    }

    //lọc giá
    private void FilterByPrice()
    {
        if (minPrice < 0) minPrice = 0;
        if (maxPrice < 0) maxPrice = 100000;
        ApplyFilter();
        StateHasChanged();
    }

    //reset
    private void ResetPriceFilter()
    {
        minPrice = 0;
        maxPrice = 100000;
        searchTerm = string.Empty;
        selectedCategories.Clear();
        ApplyFilter();
        StateHasChanged();
    }

    //tìm kiếm
    private void SearchProducts()
    {
        ApplyFilter();
    }


    private void UpdateCategoryFilter(ChangeEventArgs e)
    {
        var value = e.Value.ToString();
        if (selectedCategories.Contains(value))
        {
            selectedCategories.Remove(value);
        }
        else
        {
            selectedCategories.Add(value);
        }
        ApplyFilter();
    }




}





