    private string callerId = "vip_agent";
    private string calleeId = "regular_client";
    private async Task SetupCall()
    {
        await Js.InvokeVoidAsync("setupCall", token, callerId, calleeId);
    }
    private async Task SetupButton()
    {
        await Js.InvokeVoidAsync("setupCallEvents", "localVideo", "remoteVideo", "answerCallButton", "callButton");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await SetupCall();
            await SetupButton();
        }
    }
}