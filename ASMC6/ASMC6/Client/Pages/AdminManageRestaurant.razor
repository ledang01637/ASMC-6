@page "/adminrestaurantmanage"
@layout AdminMainLayout
@using ASMC6.Shared
@using ASMC6.Server.Service
@inject HttpClient httpClient
@inject NavigationManager Navigation




<AuthorizeView Roles="1">
    <Authorized>
        @if (listRest != null)
        {
            <hr />
            <h4>Restaurants</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Opening Hours</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var restaurant in listRest)
                    {
                        <tr>
                            <td><img src="./image/restaurant/@restaurant.Image" alt="Alternate Text" width="100px" height="100px" /></td>
                            <td>@restaurant.Name</td>
                            <td>@restaurant.OpeningHours</td>
                            <td>@restaurant.Menus</td>
                            <td>@restaurant.IsDelete</td>
                            <td>
                                @if (!restaurant.IsDelete)
                                {
                                    <button class="btn btn-primary" @onclick="() => HideRest(restaurant.RestaurantId)">Sửa</button>
                                    <button class="btn btn-danger" @onclick="() => HideRest(restaurant.RestaurantId)">Ẩn</button>
                                }
                                else
                                {
                                    <button class="btn btn-warning" @onclick="() => HideRest(restaurant.RestaurantId)">Khôi phục</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Loading...</p>
        }
    </Authorized>
    <NotAuthorized>
        <h3>Không có quyền truy cập</h3>
    </NotAuthorized>
</AuthorizeView>

