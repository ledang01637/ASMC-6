@page "/restaurant/{userId:int}"
@using ASMC6.Shared
@inject HttpClient httpClient
@inject IJSRuntime JS
@inject NavigationManager Navigation

<AuthorizeView Roles="2">
    <Authorized>
        @if (restaurants == null || menus == null || products == null || categories == null)
        {
            <p>Loading...</p>
        }
        else
        {
            <article class="container mb-3">
                <div class="mt-5 mb-5 row text-light fw-bold bg-danger bg-opacity-90 align-items-center">
                    <div class="col-md-5 mt-2 mb-2">
                        <img class="rounded" src="/image/restaurant/@restaurant.Image" width="100%" height="250px" alt="Restaurant Image">
                    </div>
                    <div class="info-res col-md-5 ms-2 fw-bold">
                        <div class="text-light">
                            <h1>@restaurant.Name</h1>
                            <hr>
                            <span>Thời gian mở cửa: @restaurant.OpeningHours.ToShortTimeString()</span><br>
                            <span>Địa chỉ: @restaurant.Address</span><br>
                            <span>Đánh giá: 4.8/5</span>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <h1 class="text-center">Quản lý sản phẩm</h1>
                    <div class="btn-create mb-2">
                        <button class="btn bg text-light" data-bs-toggle="modal" data-bs-target="#CreateModel">Thêm mới sản phẩm</button>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Ảnh</th>
                                <th>Giá</th>
                                <th>Mô tả</th>
                                <th>Menu</th>
                                <th>Danh mục</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var menuForRest = menus.FirstOrDefault(menu => menu.RestaurantId == restaurant.RestaurantId);

                                if (menuForRest != null)
                                {
                                    var prodForMenuRest = products.Where(pro => pro.MenuId == menuForRest.MenuId).ToList();
                                    if (prodForMenuRest.Count == 0)
                                    {
                                        <p>No products available</p>
                                    }
                                    else
                                    {
                                        foreach (var item in prodForMenuRest)
                                        {
                                            if (!item.IsDelete)
                                            {
                                                var catePro = categories.FirstOrDefault(c => c.CategoryId == item.CategoryId);
                                                <tr>
                                                    <td class="align-middle">@item.Name</td>
                                                    <td class="align-middle">
                                                        <img src="./image/product/@item.Image" width="50px" height="50px" alt="Product Image" />
                                                    </td>
                                                    <td class="align-middle">@item.Price.ToString("#,##0")</td>
                                                    <td class="align-middle">@item.Description</td>
                                                    <td class="align-middle">@menuForRest.Name</td>
                                                    <td class="align-middle">@catePro?.Name</td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <a class="btn btn-outline-secondary">Sửa</a>
                                                            <a class="btn btn-outline-secondary">Ẩn</a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }  
                                        }
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </article>
        }
    </Authorized>
    <NotAuthorized>
        <h3>Bạn không có quyền truy cập</h3>
        <img src="/image/meme-cut-14.jpg" width="100%" height="auto" alt="Unauthorized Access" />
    </NotAuthorized>
</AuthorizeView>

<div class="modal fade" id="CreateModel" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <EditForm Model="@prodModel" OnValidSubmit="AddProduct">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    <div class="form-group">
                        <label for="productName" class="form-label">Tên sản phẩm:</label>
                        <InputText class="form-control" @bind-Value="prodModel.Name" id="productName" name="Name" />
                        <ValidationMessage For="@(() => prodModel.Name)" />
                    </div>
                    <div class="form-group">
                        <label for="productImage" class="form-label">Ảnh sản phẩm:</label>
                        <InputFile class="form-control" OnChange="HandleFileSelected" id="productImage" />
                    </div>
                    <div class="form-group">
                        <label for="productDescription" class="form-label">Mô tả sản phẩm:</label>
                        <InputText class="form-control" @bind-Value="prodModel.Description" id="productDescription" name="Description" />
                    </div>
                    <div class="form-group">
                        <label for="productPrice" class="form-label">Giá sản phẩm:</label>
                        <InputNumber class="form-control" @bind-Value="prodModel.Price" id="productPrice" name="Price" />
                    </div>
                    <div class="form-group">
                        <label for="CategoryId" class="form-label">Danh mục:</label>
                        <InputSelect @onchange="OnCategoryChanged" class="form-control" @bind-Value="prodModel.CategoryId" id="CategoryId" name="CategoryId">
                            <option value="">Chọn danh mục</option>
                            @foreach (var category in categories)
                            {
                                <option value="@category.CategoryId">@category.Name</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="form-group">
                        <label for="MenuId" class="form-label">Menu:</label>
                        <InputSelect @onchange="OnMenuChanged" class="form-control" @bind-Value="prodModel.MenuId" id="MenuId" name="MenuId">
                            @{
                                var menuForRest = menus.Where(menu => menu.RestaurantId == restaurant.RestaurantId).ToList();
                                <option value="">Chọn menu</option>
                                foreach (var menu in menuForRest)
                                {
                                    <option value="@menu.MenuId">@menu.Name</option>
                                }
                            }
                        </InputSelect>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Thêm</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
