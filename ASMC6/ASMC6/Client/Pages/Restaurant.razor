                                @if (listProMenu is null)
                                {
                                    <div class="bd">
                                        <div id="loading">
                                            <div class="item1"></div>
                                            <div class="item2"></div>
                                            <div class="item3"></div>
                                        </div>
                                    </div>
     
                                }
                                else
                                {
                                    @foreach (var item in listProMenu)
                                    {
                                        <div class="col-md-4 text-center inner-food">
                                            <img src="/image/restaurant/@item.Image" alt="" width="100%" height="70%">
                                            <div class="name-food row m-0" style="height:46px; font-size:25px; color:white; background-color: #DB3737 ;">
                                                <span class="text-name-food text-truncate" style="">nv @item.Name</span>
                                            </div>
                                            <div class="address-food row m-0" style="background-color:#C56D6D; height:46px; font-size:25px; color:white;">
                                                <span class="text-addres-food text-truncate">ax @restaurant.Address</span>
                                            </div>
                                        </div>
                                    }
                                }
                                 
                            </div>
                        </div>

                    </div>
                    <div class="carousel col-md-4 mx-auto mt-3">
                        <div class="m-0  position-relative">
                            <button class="carousel-control-prev bg-danger" type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide="prev" style="height: 50px; border-radius:25px; width:120px;">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">previous</span>
                            </button>
                            <button class="carousel-control-next bg-danger" type="button" data-bs-target="#carouselExampleCaptions1" data-bs-slide="next" style="height: 50px; border-radius:25px; width:120px;">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">next</span>
                            </button>
                        </div>
                    </div>
                </div> *@
            </article>
        }
    </Authorized>
    <NotAuthorized>
        <h3>Bạn không có quyền truy cập</h3>
        <img src="/image/meme-cut-14.jpg" width="100%" height="auto" alt="Alternate Text" />
    </NotAuthorized>
</AuthorizeView>


