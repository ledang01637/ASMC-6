@page "/admincategorymanage"
@layout AdminMainLayout
@using ASMC6.Shared
@using ASMC6.Server.Service
@inject HttpClient httpClient
@inject NavigationManager Navigation



<AuthorizeView Roles="1">
    <Authorized>
        @if (listCategory != null)
        {
            <hr />
            <h4>Restaurants</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Opening Hours</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cate in listCategory)
                    {
                        <tr>
                            <td>@cate.CategoryId</td>
                            <td>@cate.Name</td>
                            <td>@cate.Description</td>
                            <td>
                                @*                                 <button class="btn btn-primary" @onclick="() => EditRest(cate.CategoryId)">Edit</button>
                        <button class="btn btn-danger" @onclick="() => DeleteRest(cate.CategoryId)">Delete</button> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Loading...</p>
        }
    </Authorized>
    <NotAuthorized>
        <h3>Không có quyền truy cập</h3>
    </NotAuthorized>
</AuthorizeView>

