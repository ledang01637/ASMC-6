                        </div>
                    </a>
                    <a href="/adminordermanage" class="col-md-12 btn btn-secondary text-decoration-none">
                        <div class="col-md-12 p-2 mt-1 d-flex align-items-center">
                            <i class="fas fa-shopping-cart text-white me-2"></i>
                            <h3 class="text-white">Hóa Đơn</h3>
                        </div>
                    </a>
                </nav>
            </div>
            <div class="col-md-10">
                <main>
                    <div class="container-fluid fixed-height-container" style="height: 868px;">
                        <div class="card shadow-sm mt-3">
                            <div class="card-body">
                                @Body
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

</CascadingAuthenticationState>
 